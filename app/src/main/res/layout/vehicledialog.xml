<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_bg_blue">
        <EditText
          android:id="@+id/vehiclename"
          android:layout_width="match_parent"
          android:hint="Enter Vehicle name"
          android:layout_margin="5dp"
          app:layout_constraintTop_toTopOf="parent"
          android:textColorHint="#fff"
          android:textAppearance="@style/TextAppearance.AppCompat.Large"
          android:textColor="#fff"
          android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/vehicleprice"
            android:layout_width="match_parent"
            android:hint="Enter Vehicle Price"
            android:textColorHint="#fff"
            android:layout_margin="5dp"
            app:layout_constraintTop_toBottomOf="@+id/vehiclename"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:inputType="number"
            android:textColor="#fff"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/save"
            android:layout_margin="20dp"
            android:text="Save"
            android:textColor="#000"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="22dp"
            app:layout_constraintTop_toBottomOf="@id/vehicleprice"
            android:background="@drawable/rounded_only_stroke"
            android:layout_width="match_parent"
            android:layout_height="45dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

